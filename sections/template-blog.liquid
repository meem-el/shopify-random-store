{% paginate blog.articles by section.settings.number_of_blog_post %}
  <section class="blog">
    <h1 class="blog__title">{{ blog.title }}</h1>

    <div class="blog__list">
      {% for article in blog.articles %}
        <article class="blog__item">
          <div class="blog__image-wrapper">
            {% if article.image %}
              <img
                class="blog__image"
                src="{{ article.image | img_url: 'medium' }}"
                alt="{{ article.image.alt | escape }}"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'blog__image blog__image--placeholder' }}
            {% endif %}
          </div>

          <h2 class="blog__item-title">
            <a href="{{ article.url }}" class="blog__item-link">{{ article.title }}</a>
          </h2>

          <div class="blog__meta">
            <span class="blog__author">{{ article.author }}</span>
            <span class="blog__date">{{ article.created_at | date: '%b %d, %Y' }}</span>
          </div>

          <div class="blog__excerpt">
            {% if article.excerpt.size > 0 %}
              {{ article.excerpt | strip_html | truncatewords: 15 }}
            {% else %}
              {{ article.content | strip_html | truncatewords: 15 }}
            {% endif %}
          </div>

          <a href="{{ article.url }}" class="blog__read-more">
            {{ section.settings.blog_read_more }}
          </a>
        </article>
      {% endfor %}
    </div>

    {% render 'pagination', pagination: paginate %}
  </section>
{% endpaginate %}

{% schema %}
{
  "name": "blog",
  "settings": [
    {
      "type": "text",
      "id": "blog_read_more",
      "label": "Read more label",
      "default": "Read more"
    },
    {
      "type": "range",
      "id": "number_of_blog_post",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of blog posts per page"
    }
  ]
}
{% endschema %}
