<div>
  {% paginate search.results by 12 %}
    <h3>Search Results</h3>

    <div>
      <form action="{{ routes.search_url }}" method="get">
        <div>
          <input type="search" name="q" id="" placeholder="Search">
          <button type="submit">{% render 'icon-search' %} Search</button>
        </div>
      </form>
    </div>
    {% if search.performed %}
      {% if search.results.size > 0 %}
        <p>{{ search.results.size }} results found</p>
        {% for item in search.results %}
          {% case item.object_type %}
            {% when 'product' %}
              {% render 'product-card', product_product: item %}
            {% else %}

          {% endcase %}
        {% endfor %}
      {% else %}
        <p>No results found for the term {{ search.terms }}</p>
      {% endif %}
    {% endif %}

    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>
