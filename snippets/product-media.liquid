{% case media.media_type %}
  {% when 'image' %}
    <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="">

  {% when 'external_video' %}
    {{ media | external_video_tag: class: '' }}

  {% when 'video' %}
    {{ media | video_tag: class: '', autoplay: true }}

  {% when 'model' %}
    {{ media | model_viewer_tag }}

  {% else %}
    {{ media | media_tag }}
{% endcase %}
